@{
    ViewData["Title"] = "Upload Document";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Upload Supporting Document</h1>
        <p class="lead">Please upload a document to support an existing claim.</p>
    </div>

    <form>
        <div class="form-group mb-3">
            <label for="supportingDocument" class="form-label">Select a File to Upload</label>
            <input class="form-control" type="file" id="supportingDocument">
            <small class="form-text text-muted">
                Accepted file types: PDF, JPG, PNG.
            </small>
        </div>

        <button type="submit" class="btn btn-primary btn-lg mt-3">Upload Document</button>
    </form>

    <div class="alert alert-info mt-4" role="alert">
        <strong>Note:</strong> This page is for visual demonstration only and does not process or save files.
    </div>
</div>