@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">My Claims</h1>
        <p class="lead">View the status and details of your submitted claims.</p>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Claim Period</th>
                    <th scope="col">Total Hours</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>August 2025</td>
                    <td>20</td>
                    <td><span class="badge bg-success">Verified</span></td>
                </tr>
                <tr>
                    <td>September 2025</td>
                    <td>18</td>
                    <td><span class="badge bg-warning text-dark">Submitted</span></td>
                </tr>
                <tr>
                    <td>October 2025</td>
                    <td>15</td>
                    <td><span class="badge bg-danger">Rejected</span></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="alert alert-info mt-4" role="alert">
        <strong>Note:</strong> This table is for demonstration purposes only and does not contain real data.
    </div>
</div>

