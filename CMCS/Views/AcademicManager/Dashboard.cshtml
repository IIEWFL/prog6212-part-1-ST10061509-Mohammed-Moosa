@{
    ViewData["Title"] = "Academic Manager Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Academic Manager Dashboard</h1>
        <p class="lead">Review and approve verified claims from Programme Coordinators.</p>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Lecturer</th>
                    <th>Claim Period</th>
                    <th>Status</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Dr. Smith</td>
                    <td>August 2025</td>
                    <td><span class="badge bg-success">Verified</span></td>
                    <td class="text-center">
                        <a href="/AcademicManager/ApproveClaim/1" class="btn btn-sm btn-success">Approve</a>
                        <a href="#" class="btn btn-sm btn-danger">Reject</a>
                    </td>
                </tr>
                <tr>
                    <td>Prof. Jones</td>
                    <td>August 2025</td>
                    <td><span class="badge bg-warning text-dark">Pending Verification</span></td>
                    <td class="text-center">
                        <span class="text-muted">No Action Required</span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="alert alert-info mt-4" role="alert">
        <strong>Note:</strong> This is a non-functional prototype. The action buttons are for visual demonstration only.
    </div>
</div>