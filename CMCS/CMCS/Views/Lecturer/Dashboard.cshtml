@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="text-center mt-5">
    <h1 class="display-4">Lecturer Dashboard</h1>
    <p class="lead">Select an action below to manage your claims.</p>
</div>

<div class="row mt-4">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Submit a New Claim</h5>
                <p class="card-text">Create and submit a new monthly claim for approval.</p>
                <a href="/Lecturer/SubmitClaim" class="btn btn-primary mt-2">Submit Claim</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h5 class="card-title">View My Claims</h5>
                <p class="card-text">Review the status and details of your submitted claims.</p>
                <a href="/Lecturer/MyClaims" class="btn btn-secondary mt-2">View Claims</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Upload Documents</h5>
                <p class="card-text">Add supporting documents to your existing claims.</p>
                <a href="/Lecturer/UploadDocument" class="btn btn-info mt-2">Upload Documents</a>
            </div>
        </div>
    </div>
</div>